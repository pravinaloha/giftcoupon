<?xml version="1.0"?>
<config>
   <sections>
	    <bloyalorder translate="label" module="bloyalOrder">
	    	<class>bloyal-section</class>
            <label>Order Integrator</label>
            <header_css>bloyal-header</header_css>
            <tab>bloyal</tab>
            <sort_order>110</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
	        <groups>
		        <bloyalOrder translate="label">
                    <label>Order General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <method translate="label">
                            <label>Method</label>
                            <frontend_type>select</frontend_type>
                            <source_model>bloyalOrder/source_method</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </method>
                        <logs translate="label">
                            <label>Logs</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>If the Magento Logs are disabled then this setting won't take effect.</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </logs>
                    </fields>
                </bloyalOrder>
	      	</groups>
		</bloyalorder>
	</sections>
</config>
