<?xml version="1.0"?>
<config>
    <modules>
        <Bloyal_Pay>
            <version>0.1.9</version>
        </Bloyal_Pay>
    </modules>
    <frontend>
        <routers>
            <pay>
                <use>standard</use>
                <args>
                    <module>Bloyal_Pay</module>
                    <frontName>Bloyal Gift Card</frontName>
                </args>
            </pay>
        </routers>
        <layout>
            <updates>
                <pay>
                    <file>pay.xml</file>
                </pay>
            </updates>
        </layout>
    </frontend>    
    <global>
        <sales>
            <quote>
                <totals>
                    <pay>
                        <class>pay/quote_discount</class>
                        <after>subtotal</after>
                        <before>tax</before>
                    </pay>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <pay>
                        <class>pay/order_invoice</class>
                        <after>subtotal</after>
                        <before>tax</before>
                    </pay>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <pay>
                        <class>pay/order_creditmemo</class>
                        <after>subtotal</after>
                        <before>tax</before>
                    </pay>
                </totals>
            </order_creditmemo>
            <totals_sort>
                <pay>15</pay>
            </totals_sort>
        </sales>
        <fieldsets>
            <sales_convert_quote>
                <gift_card_value>
                    <to_order>*</to_order>
                </gift_card_value>
                <gift_card_no>
                    <to_order>*</to_order>
                </gift_card_no>
            </sales_convert_quote>
            <sales_convert_quote_payment>
                <gift_card_value>
                    <to_order_payment>*</to_order_payment>
                </gift_card_value>
                <gift_card_no>
                    <to_order_payment>*</to_order_payment>
                </gift_card_no>
            </sales_convert_quote_payment>
        </fieldsets>       
        <models>
            <pay>
                <class>Bloyal_Pay_Model</class>
            </pay>
        </models>
        <resources>
            <pay_setup>
                <setup>
                    <module>Bloyal_Pay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pay_setup>
            <pay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pay_write>
            <pay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pay_read>
        </resources>
        <blocks>
            <pay>
                <class>Bloyal_Pay_Block</class>
            </pay>
        </blocks>
        <blocks>
            <adminhtml>
                <rewrite>
                    <sales_order_totals>Bloyal_Pay_Adminhtml_Block_Sales_Order_Totals</sales_order_totals>
                    <sales_order_invoice_totals>Bloyal_Pay_Adminhtml_Block_Sales_Order_Invoice_Totals</sales_order_invoice_totals>
                    <sales_order_creditmemo_totals>Bloyal_Pay_Adminhtml_Block_Sales_Order_Creditmemo_Totals</sales_order_creditmemo_totals>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <pay>
                <class>Bloyal_Pay_Helper</class>
            </pay>
        </helpers>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <pay_observer_checkout_onepage_controller_success_action>
                        <type>singleton</type>
                        <class>pay/observer</class>
                        <method>hookIntoCheckoutOnePageSuccessAction</method>
                    </pay_observer_checkout_onepage_controller_success_action>
                </observers>
            </checkout_onepage_controller_success_action>
            <paypal_prepare_line_items>
                <observers>
                    <paypal_prepare_line_items>
                        <class>pay/observer</class>
                        <method>updatePaypalTotal</method>
                    </paypal_prepare_line_items>
                </observers>
            </paypal_prepare_line_items>
        </events>
    </global>
    <default>
        <payment>
            <bloyalgiftcard>
                <active>1</active>
                <model>pay/method_pay</model>
                <order_status>processing</order_status>
                <title>Bloyal Gift Card</title>
                <message>Please enter the card number.</message>
            </bloyalgiftcard>
        </payment>
    </default>
</config>